<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="org.freedomtool.feature.security.CreatePinCodeActivity" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/header"
            style="@style/Theme.Voting.PrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/enter_passcode" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView21"
            style="@style/Theme.Voting.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            android:text="@string/passcode_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView21">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32sp"
                android:src="@drawable/ic_disabled_dot" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32sp"
                android:src="@drawable/ic_disabled_dot" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32sp"
                android:src="@drawable/ic_disabled_dot" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_disabled_dot" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:showDividers="middle">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_1"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="40dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="1"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_2"

                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="40dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="2"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_3"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"

                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="3"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:paddingBottom="3dp"
                    android:showDividers="middle">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_4"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="2dp"

                        android:layout_marginEnd="40dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="4"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_5"

                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="40dp"
                        android:background="@null"

                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="5"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_6"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"

                        android:layout_height="64dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="6"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:paddingBottom="3dp"
                    android:showDividers="middle">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_7"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"

                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="40dp"

                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="7"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_8"
                        style="@style/Theme.Voting.TextButton"

                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="40dp"

                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="8"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_9"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"

                        android:layout_height="64dp"

                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="9"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:showDividers="middle">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/empty"
                        style="@style/Theme.Voting.TextButton"

                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="40dp"
                        android:textSize="20sp"
                        android:visibility="invisible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pin_key_0"
                        style="@style/Theme.Voting.TextButton"
                        android:layout_width="86dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="40dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}"
                        android:text="0"
                        android:textSize="20sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pinDelete"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="86dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/black"
                        app:icon="@drawable/ic_backspace"
                        android:layout_height="64dp"
                        android:background="@null"
                        android:onClick="@{(v)-> activity.onKeyBoardClick(v)}" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>